
@{
    ViewData["Title"] = "LoginUser";
}
<h1>百车汇租赁系统登录</h1>
<table class="table table-bordered">
    <tr>
        <td>用户姓名</td>
        <td>
            <input id="name" type="text" />
        </td>

    </tr>
    <tr>
        <td>用户密码</td>
        <td>
            <input id="pass" type="password" />
        </td>
    </tr>
    <tr>
        <td>邮箱</td>
        <td>
            <input id="pass" type="password" />
        </td>
    </tr>
    <tr>
        <td>验证码</td>
        <td>
            <input id="text" type="text" />
            <input id="Button1" type="button" value="获取验证码" />
        </td>
    </tr>
    <tr>
        <td></td>
        <td>
            <input id="Submit1" type="submit" value="登录" onclick="show()" />
        </td>
    </tr>

</table>
@section script{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script>

        function show() {
            var obj = {};
            obj.Uname = $("#name").val();
            obj.Password = $("#pass").val();
            $.ajax({
                url: 'http://localhost:49714/User',
                type: 'post',
                dataType: 'json',
                data: obj,
                success: function (d) {
                    if (d > 0) {
                        alert("登录成功！");
                        location.href = '/Music/Show';
                    }
                    else {
                        alert("登录失败！");
                    }
                }
            })
        }
    </script>
}

