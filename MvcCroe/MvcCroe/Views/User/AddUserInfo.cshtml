
@{
    ViewData["Title"] = "AddUserInfo";
}

<h1>个人实名认证</h1>
<table>
    <tr>
        <td>个人姓名：<input id="Text1" type="text" /></td>
    </tr>
    <tr>
        <td>身份证号：<input id="Text2" type="text" /></td>
    </tr>
    <tr>
        <td><input type="button" value="取消" onclick="" /><input type="button" value="提交认证" onclick="AddUser()" /></td>
    </tr>
</table>
@section scripts{ 
<script>
    $(function () {
        AddUser();
    })
    function AddUser() {
        var obj = {};
        obj.UName = $("#Text1").val();
        obj.IDcard = $("#Text2").val();
        $.ajax({
            url: '',
            type: 'Post',
            dataType: 'json',
            data:obj,
            async: true,
            xhrFields: {
                withCredentials: true
            },
            crossDomain: true,
            success: function (d) {
                alert("认证成功！");
                location.href = '//';
            }
    }
</script>

}